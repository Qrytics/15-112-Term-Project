def checkBlanks(app, randWall):
    cells = 0
    if (app.board[randWall[0]-1][randWall[1]] == app.pathColor): cells += 1
    if (app.board[randWall[0]+1][randWall[1]] == app.pathColor): cells += 1
    if (app.board[randWall[0]][randWall[1]-1] == app.pathColor): cells += 1
    if (app.board[randWall[0]][randWall[1]+1] == app.pathColor): cells += 1
    return cells

